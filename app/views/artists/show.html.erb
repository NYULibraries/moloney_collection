<% provide(:title, @artist.name) %>
<div class='container'>
  <div class='row'>
    <div class='col-xs-12 col-md-4'>
      <%= image_tag(@artist.image, class: "description_img") %>
    </div>
    <div class='col-xs-12 col-md-8'>
      <h4><%= @artist.name.upcase %></h4>
      <%= @artist.biographical_note.html_safe %>
    </div>
  </div>
</div>
<div class='container'>
  <div class='row'>
    <div class='col-xs-12'>
      <h4>RECORDINGS</h4>
      <table class='table table-striped table-bordered'>
        <tr>   
          <th>Description</th>
          <th>Duration</th>
          <th>RefID</th>
        </tr>
        <%= render @related_song  %>
      </table>
    </div>
  </div>
</div>
